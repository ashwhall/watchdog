{
  "name": "watchdog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:with-migrations": "npm run db:migrate && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run scheduler:start\" --names \"Next.js,Scheduler\" --prefix-colors \"cyan,green\"",
    "dev:full-with-migrations": "npm run db:migrate && npm run dev:full",
    "build": "next build",
    "start": "next start",
    "start:full": "concurrently \"npm run start\" \"npm run scheduler:start\" --names \"Next.js,Scheduler\" --prefix-colors \"cyan,green\"",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "npx tsx scripts/migrate.ts",
    "db:migrate-fallback": "npx tsx scripts/init-db-fallback.ts",
    "db:seed": "npx tsx scripts/seed.ts",
    "db:setup": "npx tsx scripts/setup-db.ts",
    "db:reset": "npx tsx scripts/reset-db.ts",
    "db:reset-dogs": "npx tsx scripts/reset-dogs.ts",
    "db:studio": "drizzle-kit studio",
    "init-db": "npx tsx scripts/init-db.ts",
    "init-settings": "npx tsx scripts/init-settings.ts",
    "scrape": "npx tsx scripts/scrape-all.ts",
    "scrape:traditional": "npx tsx scripts/scrape-all.ts -- --traditional-only",
    "scrape:facebook": "npx tsx scripts/scrape-facebook.ts",
    "scrape:facebook-all": "npx tsx scripts/facebook-scrape-all.ts",
    "scrape:all": "npx tsx scripts/scrape-all.ts",
    "scheduler:start": "npx tsx scripts/start-scheduler.ts",
    "facebook:browser": "npx tsx scripts/open-facebook-browser.ts",
    "facebook:test": "npx tsx scripts/test-facebook-implementation.ts",
    "adoptapet:debug": "npx tsx scripts/debug-adoptapet-filters.ts",
    "test-scraper": "npx tsx scripts/test-scraper.ts",
    "test-puppeteer": "npx tsx scripts/test-puppeteer.ts",
    "telegram:setup": "npx tsx scripts/setup-telegram.ts",
    "telegram:test": "npx tsx scripts/test-telegram.ts",
    "telegram:manage": "npx tsx scripts/manage-telegram.ts",
    "telegram:demo": "npx tsx scripts/demo-telegram.ts",
    "init": "npx tsx scripts/init-system.ts",
    "all": "npm run dev:full"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cheerio": "^0.22.35",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.9",
    "axios": "^1.10.0",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.0",
    "concurrently": "^9.2.0",
    "drizzle-orm": "^0.44.2",
    "next": "15.3.5",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "puppeteer": "^24.12.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
